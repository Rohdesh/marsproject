#include <Servo.h>

Servo myServo;
const int flexPin = A0;
const int buttonPin = 2;
int buttonState = 0;

void setup() {
  Serial.begin(9600);
  myServo.attach(9);
  pinMode(buttonPin, INPUT);
}

void loop() {
  int flexValue;
  int servoPosition;
  
  flexValue = analogRead(flexPin);
  
  int angle = map(flexValue, 10, 33, 180,0);
  angle = constrain(angle, 0, 180);

  
  
  angle = constrain(angle, 0, 180);
  
  myServo.write(angle);
  Serial.print("Flex: ");
  Serial.print(flexValue);
  Serial.print(" |Angle: ");
  Serial.println(angle);
  
  buttonState = digitalRead(buttonPin);
  if (buttonState == HIGH) {
    Serial.println("ðŸ”¥ ACTION TRIGGERED!");
  }
  
  delay(100);
}
